{
  "name": "stranger",
  "private": true,
  "version": "0.0.1",
  "description": "Self-hosted UI feature review automation tool",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @stranger/web dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:seed": "pnpm --filter @stranger/db db:seed"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  },
  "devDependencies": {
    "vitest": "^4.0.18"
  }
}
